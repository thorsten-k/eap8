	<build>
		<pluginManagement>
      		<plugins>
      			<!-- Responsive -->
      			<plugin>
			        <groupId>org.jeesl</groupId>
			        <artifactId>jeesl-maven</artifactId>
			        <version>0.3.0-SNAPSHOT</version>
				</plugin>
				<plugin>
					<groupId>org.jasig.maven</groupId>
		            <artifactId>sass-maven-plugin</artifactId>
		            <version>1.1.1</version>
		            <executions>
		                <execution>
		                    <id>compile</id>
		                    <phase>prepare-package</phase>
		                    <goals><goal>update-stylesheets</goal></goals>
		                </execution>
		            </executions>
		            <configuration>
		                <resources>
		                    <resource>
		                        <source>
		                            <directory>${basedir}/src/main/webapp/resources/scss</directory>
		                        </source>
		                        <destination>${basedir}/src/main/webapp/resources/css</destination>
		                    </resource>
		                    <resource>
		                        <source>
		                            <directory>${basedir}/../jeesl/jsf/src/main/resources/META-INF/resources/scss</directory>
		                        </source>
		                        <destination>${basedir}/src/main/webapp/resources/css</destination>
		                    </resource>
		                </resources>
		                <sassOptions>
		                    <cache>false</cache>
		                    <always_update>true</always_update>
		                </sassOptions>
		            </configuration>
	            </plugin>
      		</plugins>
		</pluginManagement>
		<finalName>metachart</finalName>
		<plugins>
			<plugin>
	       		<artifactId>maven-compiler-plugin</artifactId>
	       		<configuration>
	          		<source>1.8</source>
	          		<target>1.8</target>
	          		<encoding>${project.build.sourceEncoding}</encoding>
	       		</configuration>
           	</plugin>
			<plugin>
	            <artifactId>maven-war-plugin</artifactId>
	            <version>2.1.1</version>
	            <configuration>
	            	<failOnMissingWebXml>false</failOnMissingWebXml>
					<archive>     
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
						<manifestEntries>
                     <Dependencies>org.hibernate</Dependencies>
                  </manifestEntries>
					</archive>
	            </configuration>
			</plugin>
			<plugin>
                <groupId>org.wildfly.plugins</groupId>
                <artifactId>wildfly-maven-plugin</artifactId>
                <version>1.1.0.Final</version>
            </plugin>
         	<plugin>
				<groupId>org.jeesl</groupId>
				<artifactId>jeesl-maven</artifactId>
				<executions>
					<execution>
						<id>create-msgbundle</id>
						<phase>compile</phase> 
						<goals><goal>msgBundle2</goal></goals>
						<configuration>
							<msgSource>${basedir}/src/main/resources/${project.parent.artifactId}/msg/xml</msgSource>
							<targetDir>${basedir}/src/main/resources/${project.parent.artifactId}/msg/properties</targetDir>
							<prefixXml>${project.parent.artifactId}/msg/xml</prefixXml>
						</configuration>
					</execution>
					<execution>
						<id>create-prototype-css</id>
						<phase>prepare-package</phase>
						<goals><goal>createCssPrototype</goal></goals>
						<configuration>
							<cssName>metachartGenerated.css</cssName>
							<colorDark>#607caf</colorDark>
							<colorMedium>#6670CB</colorMedium>
							<colorLight>#bdbedc</colorLight>
							<log>WARN</log>
						</configuration>
					</execution>
					<execution>
						<id>check-xhtml</id>
						<phase>prepare-package</phase>
						<goals><goal>parseXhtml</goal></goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
	        	<artifactId>maven-resources-plugin</artifactId>
	        	<version>2.5</version>
        		<executions>
          			<execution>
            			<id>copy-resources-composition</id>
            			<phase>prepare-package</phase>
            			<goals>
              				<goal>copy-resources</goal>
            			</goals>
            			<configuration>
	              			<outputDirectory>${project.build.directory}/classes/composition.metachart-war</outputDirectory>
	              			<resources>          
	                			<resource>
	                  				<directory>src/main/webapp/WEB-INF/composition</directory>
	                  				<filtering>true</filtering>
	                			</resource>
	              			</resources>              
	            		</configuration>            
          			</execution>
          			<execution>
            			<id>copy-java-resources-showcase</id>
            			<phase>prepare-package</phase>
            			<goals>
              				<goal>copy-resources</goal>
            			</goals>
            			<configuration>
	              			<outputDirectory>${project.build.directory}/classes</outputDirectory>
	              			<resources>          
	                			<resource>
	                  				<directory>src/main/java</directory>
	                  				<filtering>true</filtering>
	                			</resource>
	              			</resources>              
	            		</configuration>            
          			</execution>
				</executions>
      		</plugin>
      		<plugin>
				<groupId>net.sf.exlp</groupId>
				<artifactId>exlp-maven</artifactId>
				<executions>
					<execution>
						<id>mvn-ignore-versions</id>
						<phase>process-resources</phase> 
						<goals><goal>mvnVersionIgnore</goal></goals>
						<configuration>
	              			<log>WARN</log>
	              			<files>
							  <param>exlp/maven/exlp-versions.xml</param>
								<!-- <param>ahtutils/maven/ahtutils-versions.xml</param> -->
							</files>
							<saveTo>${basedir}/src/main/resources/metachart/maven/ignore-versions.xml</saveTo>
	              		</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
   
